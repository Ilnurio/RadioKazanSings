<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/custom"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/im_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_new" />

    <ImageButton
        android:id="@+id/b_nav_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:adjustViewBounds="true"
        android:background="@color/custom"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/im_logo"
        app:layout_constraintStart_toEndOf="@+id/im_logo"
        app:layout_constraintTop_toTopOf="@+id/im_logo"
        app:srcCompat="@drawable/image_play" />

    <ImageButton
        android:id="@+id/b_nav_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:adjustViewBounds="true"
        android:background="@color/custom"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/b_nav_play"
        app:layout_constraintStart_toEndOf="@+id/b_nav_play"
        app:layout_constraintTop_toTopOf="@+id/b_nav_play"
        app:srcCompat="@drawable/image_pause" />


</androidx.constraintlayout.widget.ConstraintLayout>